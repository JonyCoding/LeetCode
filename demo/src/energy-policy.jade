extends ./index_tp.jade
prepend head
    - var title = "专利首页";
prepend body
    - var body_id = "index";
    - var path = "energy-news.html";
    script(src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js")
    script(src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js")
block main
    template.
        <div class="body">
            <div class="energy-policy">
                <!-- 能源政策模拟器主容器 -->
                <div class="energy-policy-container">
                    <!-- 顶部工具栏 -->
                    <div class="tool-bar">
                        <div class="tool-bar-left">
                            <span class="logo">ENERGY INNOVATION</span>
                            <span class="title">ENERGY POLICY SIMULATOR 能源政策模拟器</span>
                        </div>
                        <div class="tool-bar-right">
                            <div class="tool-item" title="开始一个新的情景">
                                <i class="el-icon-plus"></i>
                            </div>
                            <div class="tool-item" title="保存情景">
                                <i class="el-icon-folder-checked"></i>
                            </div>
                            <div class="tool-item" title="使用新名称保存情景">
                                <i class="el-icon-document-copy"></i>
                            </div>
                            <div class="tool-item" title="重命名情景">
                                <i class="el-icon-edit"></i>
                            </div>
                            <div class="tool-item" title="删除情景">
                                <i class="el-icon-delete"></i>
                            </div>
                            <div class="tool-item" title="恢复到已保存的情景">
                                <i class="el-icon-refresh-left"></i>
                            </div>
                            <div class="tool-item" title="下载图形数据和策略设置">
                                <i class="el-icon-download"></i>
                            </div>
                            <div class="tool-item" title="分享该情景">
                                <i class="el-icon-share"></i>
                            </div>
                            <div class="tool-item" title="选择情景和目标比较">
                                <i class="el-icon-s-data"></i>
                            </div>
                            <div class="tool-item" title="查看模型文档">
                                <i class="el-icon-document"></i>
                            </div>
                        </div>
                    </div>

                    <!-- 主要内容区域 -->
                    <div class="main-content">
                        <!-- 左侧面板 -->
                        <div class="left-panel">
                            <!-- 新情景 - 数据驱动 -->
                            <div class="top-section">
                                <h3>
                                    <i class="el-icon-folder-opened"></i>
                                    新情景
                                </h3>
                                <div class="section-content">
                                    <ul class="scenario-list compact">
                                        <li class="scenario-item" v-for="scenario in scenarios" :key="scenario.id" @click="selectScenario(scenario.id)" :class="{active: scenario.active}">
                                            <input type="radio" name="scenario" :value="scenario.id" :checked="scenario.active">
                                            <i class="el-icon-document"></i>
                                            <span>{{ scenario.name }}</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- 参数设置 - 数据驱动的树型结构 -->
                            <div class="bottom-section">
                                <h3>
                                    <i class="el-icon-setting"></i>
                                    参数设置
                                </h3>
                                <div class="section-content">
                                    <div class="parameter-tree">
                                        <el-tree :data="treeData" :props="defaultProps" @node-click="handleNodeClick" :render-content="renderContent" :allow-drop="allowDrop" :draggable="false" node-key="id" :expand-on-click-node="true" :check-on-click-node="false"></el-tree>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 右侧图表区域 -->
                        <div class="right-panel">
                            <div class="chart-container">
                                <div class="chart-header">
                                    <h2>排放：二氧化碳当量 (CO2e) - 总排放 (包括土地利用)</h2>
                                    <div class="chart-controls">
                                        <!-- 图表控制按钮将在这里添加 -->
                                    </div>
                                </div>
                                <div class="chart-content">
                                    <!-- 图表内容将在这里添加 -->
                                    <div class="chart-placeholder">
                                        <p>图表区域 - 待实现</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
block script
    script(src="./js/energy-policy.js?v=#{time}")
